<% include ./partials/header %>

<form action="/craigslist/new" method="POST" class="ui form">
    <div class="field">
        <input type="text" name="ad[title]" placeholder="Title">
    </div>
    <div class="field"><input type="text" name="ad[image]" placeholder="Image URL"></div>
    <div class="field"><input type="text" name="ad[phone]" placeholder="Phone Number"></div>
    <div class="field"><input type="text" name="ad[price]" placeholder="Price"></div>

    <div class="field">
      <select name="ad[level]">
        <option value="" disabled selected>Select FILEX level</option>
        <option value="1">Level 1</option>
        <option value="2">Level 2</option>
        <option value="3">Level 3</option>
        <option value="4">Level 4</option>
        <option value="5">Level 5</option>
      </select>
    </div>

    <div class="field"><textarea name="ad[description]" placeholder="Description"></textarea></div>
    <!--<input type="submit">-->
    <div class="button-collection">
        <button type="submit" class="ui red basic button">Publish Listing</button>
    </div>
</form>
<a href="/craigslist"><button class="ui blue basic button" id="listings-btn">Back to Listings</button></a>
